<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Edit Comment Form Card -->
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="text-center">Edit Comment</h2>
                    <hr>
                    <!-- Form -->
                    <form action="/comments/<%= comment._id %>?_method=put" method="post">
                        <!-- Username Field (Read-Only) -->
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" value="<%= comment.username %>" readonly>
                        </div>
                        
                        <!-- Comment Field -->
                        <div class="mb-3">
                            <label class="form-label" for="comment">Comment</label>
                            <textarea class="form-control" id="comment" name="comment[comment]" rows="3" required><%= comment.comment %></textarea>
                        </div>

                        <!-- Update Button -->
                        <div class="d-grid gap-2">
                            <button class="btn btn-info btn-block">Update Comment</button>
                        </div>
                    </form>
                    
                    <!-- Back Button -->
                    <div class="mt-3 text-center">
                        <a href="/comments/<%= comment._id %>" class="btn btn-outline-secondary">
                            Back to Comment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
