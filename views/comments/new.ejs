<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Comment</h1>
    <div class="col-6 offset-3">
        <form action="/comments" method="post">
            <div class="mb-3">
                <label class="form-label" for="title">Username</label>
                <input class="form-control" type="text" id="title" name="comment[username]" required>
                
            </div>
            <div class="mb-3">
                <label  class="form-label" for="comment">comment</label>
                <input class="form-control" type="text" id="comment" name="comment[comment]" required>
            </div>
            
            
            <div class="mb-3">
                <button class="btn btn-success">Add Comment</button>
            </div>
        </form>
        <a href="/comments">Back</a>
    </div>
</div>

