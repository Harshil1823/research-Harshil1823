<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- New Comment Form Card -->
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="text-center">Add a New Comment</h2>
                    <hr>
                    <!-- Form -->
                    <form action="/comments" method="post">
                        <!-- Username Field -->
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="comment[username]" required>
                        </div>

                        <!-- Comment Field -->
                        <div class="mb-3">
                            <label class="form-label" for="comment">Comment</label>
                            <textarea class="form-control" id="comment" name="comment[comment]" rows="3" required></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-block">Add Comment</button>
                        </div>
                    </form>

                    <!-- Back Button -->
                    <div class="mt-3 text-center">
                        <a href="/comments" class="btn btn-outline-secondary">Back to Comments</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
