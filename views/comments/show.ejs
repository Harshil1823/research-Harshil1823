<% layout('layouts/boilerplate') %>
<body class="mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <!-- User Details -->
                        <h2 class="card-title">Username: <strong><%= comment.username %></strong></h2>
                        <hr>

                        <!-- Comment Content -->
                        <p class="card-text">
                            <%= comment.comment %>
                        </p>
                        
                        <!-- Created Date -->
                        <p class="text-muted">
                            <small>Created on: 
                                <%= comment.createdAt.toLocaleDateString('en-US', {
                                    weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'
                                }) %>
                            </small>
                        </p>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <!-- Edit Button -->
                            <a href="/comments/<%= comment._id %>/edit" class="btn btn-warning btn-sm">
                                Edit Comment
                            </a>

                            <!-- Delete Button -->
                            <form action="/comments/<%= comment._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this comment?')">
                                <button class="btn btn-danger btn-sm">
                                    Delete Comment
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Back Button -->
                <div class="mt-4 text-center">
                    <a href="/comments" class="btn btn-outline-secondary">
                        Back to Comments
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
